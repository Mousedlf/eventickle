    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comedy_club in comedy_clubs %}
            <tr>
                <td>{{ comedy_club.id }}</td>
                <td>{{ comedy_club.name }}</td>
                <td>
                    <a href="{{ path('app_comedy_club_show', {'id': comedy_club.id}) }}">show</a>
